<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">
<Properties>
<Property name="log-path">c:\logs</Property>
</Properties>

<Appenders>


<Console name="console" target="SYSTEM_OUT">
<PatternLayout pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"/>
</Console>

        <File name="caricamentiISPAppender" fileName="caricamentiNBP.log" immediateFlush="true" append="false"
        filePattern="caricamento.log" >
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
 <!--    
       <File name="gablog" fileName="caricamento${date:yyyy-MM-dd-hh-mm-ss}.log" immediateFlush="false" append="false"
        filePattern="c:/logs/all-${date:yyyy-MM-dd}.%i.log" >
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
-->

</Appenders>

<Loggers>
<Logger name="com.isp.wsrr.batch.consumeproducer.SSAAcronimoBusinessApplication" level="info" additivity="false">
<appender-ref ref="caricamentiISPAppender" level="info"/>
</Logger>

<Root level="info" additivity="false">
<appender-ref ref="console"/>
<AppenderRef ref="MyFile"/>
</Root>
</Loggers>
</Configuration>